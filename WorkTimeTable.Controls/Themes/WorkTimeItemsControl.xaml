<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:wttCtrl="clr-namespace:WorkTimeTable.Controls"
                    xmlns:wttInfraModel="clr-namespace:WorkTimeTable.Infrastructure.Models;assembly=WorkTimeTable.Infrastructure"
                    xmlns:sosoExt="clr-namespace:SosoThemeLibrary.Extensions;assembly=SosoThemeLibrary"
                    xmlns:sosoCtrl="clr-namespace:SosoThemeLibrary.Controls;assembly=SosoThemeLibrary">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,/SosoThemeLibrary;Component/Themes/Brushes.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="{x:Type wttCtrl:WorkTimeItemsControl}"  TargetType="{x:Type wttCtrl:WorkTimeItemsControl}">
        <Setter Property="Background" Value="{StaticResource ControlDarkBackgroundBrush}"/>
        <Setter Property="BorderBrush"  Value="{StaticResource ControlBorderBrush}"/>
        <Setter Property="BorderThickness"  Value="1"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type wttCtrl:WorkTimeItemsControl}">
                    <Border BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}"
                            Background="{TemplateBinding Background}">
                        <DockPanel LastChildFill="True">
                            <Grid DockPanel.Dock="Top">
                                <Grid.Resources>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="Foreground" Value="{StaticResource ForegroundBrush}"/>
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                        <Setter Property="VerticalAlignment" Value="Center"/>
                                    </Style>
                                </Grid.Resources>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="300" SharedSizeGroup="StartTime"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100" SharedSizeGroup="EndTime"/>
                                </Grid.ColumnDefinitions>

                                <Border BorderThickness="1" BorderBrush="{StaticResource ControlBorderBrush}" Background="{StaticResource ControlBackgroundBrush}">
                                    <GroupBox Header="StartWorkTime">
                                        <Grid>
                                            <Grid.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="BorderBrush" Value="{StaticResource ControlBorderBrush}"/>
                                                    <Setter Property="BorderThickness" Value="1"/>
                                                    <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}"/>
                                                </Style>
                                            </Grid.Resources>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="60"/>
                                            </Grid.ColumnDefinitions>

                                            <Border>
                                                <Grid>
                                                    <Rectangle Height="1" VerticalAlignment="Top" Fill="{StaticResource Glow}"
                                                    <TextBlock Text="Year" />
                                                </Grid>
                                                
                                            </Border>
                                        </Grid>
                                    </GroupBox>
                                    
                                </Border>
                                <Border BorderThickness="1" BorderBrush="{StaticResource ControlBorderBrush}" Background="{StaticResource ControlBackgroundBrush}" Grid.Column="1">
                                    <TextBlock Text="WorkTimeSpan"/>
                                </Border>
                                <Border BorderThickness="1" BorderBrush="{StaticResource ControlBorderBrush}" Background="{StaticResource ControlBackgroundBrush}" Grid.Column="2">
                                    <TextBlock Text="EndWorkTime"/>
                                </Border>
                            </Grid>

                            <ItemsPresenter />
                        </DockPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="ItemTemplate">
            <Setter.Value>
                <DataTemplate DataType="{x:Type wttInfraModel:WorkTimeModel}">
                    <Grid>
                        <Grid.Resources>
                            <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource {x:Type ComboBox}}">
                                <Setter Property="Margin" Value="0 -1 0 0"/>
                                <Setter Property="MinHeight" Value="0"/>
                                <Setter Property="Width" Value="60"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="VerticalAlignment" Value="Stretch"/>
                                <Setter Property="sosoExt:ThemeExtensions.GlowBorderThickness" Value="0"/>
                            </Style>
                        </Grid.Resources>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="350" SharedSizeGroup="StartTime"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100" SharedSizeGroup="EndTime"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Orientation="Horizontal" Margin="0 -1 0 0">
                            <GroupBox Header="Year" DockPanel.Dock="Left" Width="60">
                                <TextBox Margin="0 -1 0 0" HorizontalAlignment="Stretch" MinWidth="0" Height="32" BorderThickness="0" sosoExt:ThemeExtensions.GlowBorderThickness="0"/>
                            </GroupBox>
                            <GroupBox Header="Month" DockPanel.Dock="Left">
                                <ComboBox />
                            </GroupBox>
                            <GroupBox Header="Day" DockPanel.Dock="Left">
                                <ComboBox />
                            </GroupBox>

                            <GroupBox Header="Hour" DockPanel.Dock="Left">
                                <ComboBox />
                            </GroupBox>
                            <GroupBox Header="Minute" DockPanel.Dock="Left" BorderThickness="0">
                                <ComboBox />
                            </GroupBox>
                        </StackPanel>
                            
                        <StackPanel Margin="8" Grid.Column="1">
                            <Slider x:Name="sldWorkTimeSpan" Orientation="Horizontal" VerticalAlignment="Center" Minimum="0" Maximum="1440" TickFrequency="5" IsSnapToTickEnabled="True" Value="60"/>
                            <TextBlock Text="{Binding ElementName=sldWorkTimeSpan, Path=Value}">
                                <Run Text="Minute: " />
                                <Run Text="{Binding Path=WorkTimeSpan, StringFormat={}{0}}"/>
                            </TextBlock>
                        </StackPanel>

                        <TextBlock Grid.Column="2" Text="{Binding Path=EndWorkTime, StringFormat={}{yyyy-MM-dd HH:mm}}"/>
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>