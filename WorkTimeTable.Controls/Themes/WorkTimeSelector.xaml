<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sosoExt="clr-namespace:SosoThemeLibrary.Extensions;assembly=SosoThemeLibrary"
                    xmlns:localCtrl="clr-namespace:WorkTimeTable.Controls"
                    xmlns:localValid="clr-namespace:WorkTimeTable.Infrastructure.Validations;assembly=WorkTimeTable.Infrastructure">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,/SosoThemeLibrary;Component/Themes/Brushes.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="{x:Type localCtrl:WorkTimeSelector}" TargetType="{x:Type localCtrl:WorkTimeSelector}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type localCtrl:WorkTimeSelector}">
                    <ControlTemplate.Resources>
                        <Style x:Key="{x:Type TextBox}" TargetType="{x:Type TextBox}" BasedOn="{StaticResource {x:Type TextBox}}">
                            <Setter Property="MinWidth" Value="0"/>
                            <Setter Property="Width" Value="70"/>
                            <Setter Property="sosoExt:ThemeExtensions.GlowBorderThickness" Value="0"/>
                        </Style>
                    </ControlTemplate.Resources>
                    
                    <StackPanel Orientation="Horizontal">
                        <GroupBox Header="Year">
                            <TextBox MinWidth="0">
                                <TextBox.Text>
                                    <Binding Path="Year" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                                        <Binding.ValidationRules>
                                            <localValid:YearValidationRule ValidatesOnTargetUpdated="True"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </GroupBox>
                        <GroupBox Header="Month" sosoExt:ThemeExtensions.GlowBorderThickness="0 1">
                            <TextBox MinWidth="0">
                                <TextBox.Text>
                                    <Binding Path="Month" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                                        <Binding.ValidationRules>
                                            <localValid:MonthValidationRule ValidatesOnTargetUpdated="True"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </GroupBox>
                        <GroupBox Header="Day">
                            <TextBox MinWidth="0">
                                <TextBox.Text>
                                    <Binding Path="Day" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                                        <Binding.ValidationRules>
                                            <localValid:DayValidationRule ValidatesOnTargetUpdated="True"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </GroupBox>

                        <GroupBox Header="Hour" Margin="10 0 0 0" sosoExt:ThemeExtensions.GlowBorderThickness="1 1 0 1">
                            <TextBox>
                                <TextBox.Text>
                                    <Binding Path="Hour" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                                        <Binding.ValidationRules>
                                            <localValid:HourValidationRule ValidatesOnTargetUpdated="True"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </GroupBox>
                        <GroupBox Header="Minute">
                            <TextBox>
                                <TextBox.Text>
                                    <Binding Path="Minute" UpdateSourceTrigger="PropertyChanged" NotifyOnValidationError="True">
                                        <Binding.ValidationRules>
                                            <localValid:MinuteValidationRule ValidatesOnTargetUpdated="True"/>
                                        </Binding.ValidationRules>
                                    </Binding>
                                </TextBox.Text>
                            </TextBox>
                        </GroupBox>
                    </StackPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>