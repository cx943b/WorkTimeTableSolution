<UserControl x:Class="WorkTimeTable.Views.AddWorkerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
             xmlns:viewModel="clr-namespace:WorkTimeTable.ViewModels"
             xmlns:sosoExt="clr-namespace:SosoThemeLibrary.Extensions;assembly=SosoThemeLibrary"
             xmlns:local="clr-namespace:WorkTimeTable.Views"
             mc:Ignorable="d" 
             d:DesignHeight="48" d:DesignWidth="100"
             d:DataContext="{d:DesignInstance Type={x:Type viewModel:AddWorkerViewModel}, IsDesignTimeCreatable=True}">
    <Button MinWidth="0" sosoExt:ThemeExtensions.GlowBorderThickness="1 0 0 0" BorderThickness="1 0 0 1"
            Command="{Binding AddButtonClickedCommand}">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
            <fa:IconImage Icon="AddressCard" Width="24" Height="24" Foreground="{StaticResource ForegroundBrush}" Margin="0 0 6 0"/>
            <fa:IconImage Icon="Plus" Width="12" Height="12" Foreground="{StaticResource ForegroundBrush}"/>
        </StackPanel>
    </Button>
</UserControl>
