<UserControl x:Class="WorkTimeTable.Views.EntireWorkerTimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:sys="system"
             xmlns:wttCtrl="clr-namespace:WorkTimeTable.Controls;assembly=WorkTimeTable.Controls"
             xmlns:wttVM="clr-namespace:WorkTimeTable.ViewModels"
             xmlns:view="clr-namespace:WorkTimeTable.Views"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type={x:Type wttVM:EntireWorkerTimeViewModel}}"
             d:DesignHeight="64" d:DesignWidth="400">

    <i:Interaction.Triggers>
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadWorkersCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>

    <wttCtrl:EntireWorkerTimeBar Height="auto" BorderThickness="{Binding RelativeSource={RelativeSource AncestorType={x:Type view:EntireWorkerTimeView}}, Path=BorderThickness}"
                                 BarStartTime="2024-01-01"
                                 BarEndTime="2024-01-05"
                                 ItemsSource="{Binding Workers}"/>
</UserControl>
