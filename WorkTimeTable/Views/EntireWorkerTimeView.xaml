<UserControl x:Class="WorkTimeTable.Views.EntireWorkerTimeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:vm="clr-namespace:WorkTimeTable.ViewModels"
             xmlns:wttCtrl="clr-namespace:WorkTimeTable.Controls;assembly=WorkTimeTable.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="64" d:DesignWidth="400"
             d:DataContext="{d:DesignInstance Type={x:Type vm:EntireWorkTimeViewModel}}">

    <wttCtrl:EntireWorkerTimeBar BorderThickness="0 0 0 1" ItemsSource="{Binding FilteredWorkTimeLists}"
                                 BarStartTime="{Binding BarStartTime}"
                                 BarEndTime="{Binding BarEndTime}"/>
</UserControl>
