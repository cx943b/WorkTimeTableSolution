<UserControl x:Class="WorkTimeTable.Views.MainView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wttView="clr-namespace:WorkTimeTable.Views"
             xmlns:wttViewModel="clr-namespace:WorkTimeTable.ViewModels"
             xmlns:wttInfraModel="clr-namespace:WorkTimeTable.Infrastructure.Models;assembly=WorkTimeTable.Infrastructure"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance Type={x:Type wttViewModel:MainViewModel}, IsDesignTimeCreatable=False}">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/SosoThemeLibrary;Component/Themes/Brushes.xaml"/>
            </ResourceDictionary.MergedDictionaries>


            <wttInfraModel:WorkerModel x:Key="worker" Name="cx943b" BirthDate="860811" ColorName="CornflowerBlue"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <DockPanel>
        <Grid DockPanel.Dock="Top" DataContext="{Binding TargetWorker}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="137"/>
            </Grid.ColumnDefinitions>

            <wttView:EntireWorkTimeView BorderBrush="{StaticResource ControlBorderBrush}" BorderThickness="0 0 0 1"/>
            <wttView:LoadWorkerListView Height="42" Grid.Column="1"
                                        BorderBrush="{StaticResource ControlBorderBrush}" BorderThickness="0 0 0 1"/>
            
            <wttView:WorkerInfoView d:DataContext="{StaticResource worker}" Grid.Row="1"/>
            <wttView:WorkTimeFilterView Grid.Row="1" Grid.Column="1" />
        </Grid>
        
        <wttView:WorkTimesView />
    </DockPanel>
</UserControl>
