<Window x:Class="WorkTimeTable.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WorkTimeTable"
        xmlns:tk="clr-namespace:CommunityToolkit.Common.Helpers;assembly=CommunityToolkit.Common"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:wttCtrl="clr-namespace:WorkTimeTable.Controls;assembly=WorkTimeTable.Controls"
        xmlns:wttInfra="clr-namespace:WorkTimeTable.Infrastructure;assembly=WorkTimeTable.Infrastructure"
        xmlns:view="clr-namespace:WorkTimeTable.Views"
        xmlns:vm="clr-namespace:WorkTimeTable.ViewModels"
        Title="MainWindow" Height="450" Width="800"
        UseLayoutRounding="True" SnapsToDevicePixels="True">
    
    <StackPanel Margin="10">
        <view:EntireWorkerTimeView Height="100" Margin="10">
            <i:Interaction.Triggers>
                <i:EventTrigger EventName="Loaded">
                    <i:InvokeCommandAction Command="{Binding LoadWorkersCommand}"/>
                </i:EventTrigger>
            </i:Interaction.Triggers>
        </view:EntireWorkerTimeView>

    </StackPanel>
</Window>
